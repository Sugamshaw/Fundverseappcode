<?xml version="1.0" encoding="utf-8"?>

<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="4dp"
    android:layout_marginVertical="6dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp"
    app:strokeWidth="1dp"
    app:strokeColor="@color/gray_200"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/card_background"
        >

        <!-- Header Section with Gradient -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/card_header_gradient_blue"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- LE ID Badge -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Legal Entity"
                        android:textSize="10sp"
                        android:textColor="@color/white"
                        android:alpha="0.8"
                        android:textStyle="bold"
                        android:letterSpacing="0.05" />

                    <TextView
                        android:id="@+id/tv_le_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="LE000001"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:textColor="@color/white"
                        android:layout_marginTop="2dp"
                        android:fontFamily="sans-serif-medium" />
                </LinearLayout>

                <!-- Edit Button -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="#33FFFFFF"
                    app:strokeWidth="1dp"
                    app:strokeColor="#66FFFFFF">

                    <ImageButton
                        android:id="@+id/btn_edit"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_edit"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:padding="8dp"
                        android:tint="@color/white"
                        android:contentDescription="Edit" />
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>
        </RelativeLayout>

        <!-- Content Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Legal Name -->
            <TextView
                android:id="@+id/tv_legal_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="EntityLE000001"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/gray_900"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="8dp" />

            <!-- LEI -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_id"
                    android:tint="@color/gray_600"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:id="@+id/tv_lei"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="LEI000000000000001"
                    android:textSize="13sp"
                    android:textColor="@color/gray_600"
                    android:fontFamily="monospace" />
            </LinearLayout>

            <!-- Jurisdiction -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_location"
                    android:tint="@color/gray_600"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:id="@+id/tv_jurisdiction"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="USA"
                    android:textSize="14sp"
                    android:textColor="@color/gray_900"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Entity Type Badge -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="6dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/blue_600"
                android:layout_marginBottom="12dp">

                <TextView
                    android:id="@+id/tv_entity_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MANAGER"
                    android:textSize="11sp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="6dp"
                    android:letterSpacing="0.05" />
            </com.google.android.material.card.MaterialCardView>

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray_200"
                android:layout_marginVertical="8dp" />

            <!-- Action Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="end">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_management"
                    style="@style/Widget.Material3.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="Management"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    app:icon="@drawable/ic_management"
                    app:iconSize="18dp"
                    app:iconTint="@color/purple_500"
                    android:textColor="@color/purple_500"
                    android:layout_marginEnd="4dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_funds"
                    style="@style/Widget.Material3.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="Funds"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    app:icon="@drawable/ic_fund"
                    app:iconSize="18dp"
                    app:iconTint="@color/blue_600"
                    android:textColor="@color/blue_600"
                    android:layout_marginEnd="4dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_subfunds"
                    style="@style/Widget.Material3.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="SubFunds"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    app:icon="@drawable/ic_subfund"
                    app:iconSize="18dp"
                    app:iconTint="@color/teal_600"
                    android:textColor="@color/teal_600" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
