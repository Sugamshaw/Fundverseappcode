<?xml version="1.0" encoding="utf-8"?>
<!-- Recommended Fund Item Layout -->
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_fund"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    app:cardCornerRadius="16dp"
    android:backgroundTint="@color/gray_50"
    app:cardElevation="3dp"
    app:strokeWidth="1dp"
    app:strokeColor="@color/gray_200">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Rank Badge -->
        <TextView
            android:id="@+id/tv_rank"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:text="1"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:gravity="center"
            android:background="@drawable/circle_background_gold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Recommendation Badge -->
        <TextView
            android:id="@+id/tv_recommendation_badge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BUY"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@drawable/rounded_background_success"
            android:paddingHorizontal="12dp"
            android:paddingVertical="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Fund Name -->
        <TextView
            android:id="@+id/tv_fund_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="8dp"
            android:text="Global Equity Growth Fund"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:maxLines="2"
            android:ellipsize="end"
            app:layout_constraintStart_toEndOf="@id/tv_rank"
            app:layout_constraintEnd_toStartOf="@id/tv_recommendation_badge"
            app:layout_constraintTop_toTopOf="@id/tv_rank" />

        <!-- Fund ID -->
        <TextView
            android:id="@+id/tv_fund_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="F000001"
            android:textSize="12sp"
            android:textColor="@color/gray_600"
            app:layout_constraintStart_toStartOf="@id/tv_fund_name"
            app:layout_constraintEnd_toEndOf="@id/tv_fund_name"
            app:layout_constraintTop_toBottomOf="@id/tv_fund_name" />

        <!-- Investment Score Card -->
        <LinearLayout
            android:id="@+id/layout_investment_score"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/gradient_background_purple"
            android:padding="16dp"
            app:layout_constraintTop_toBottomOf="@id/tv_fund_id">

            <!-- AI Icon -->
            <TextView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="🤖"
                android:textSize="32sp"
                android:gravity="center" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginHorizontal="16dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AI Investment Score"
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    android:alpha="0.9" />

                <TextView
                    android:id="@+id/tv_investment_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="8.75"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/white" />

            </LinearLayout>

            <!-- Score Rating -->
            <TextView
                android:id="@+id/tv_score_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="⭐⭐⭐⭐⭐"
                android:textSize="16sp" />

        </LinearLayout>

        <!-- Metrics Grid -->
        <LinearLayout
            android:id="@+id/layout_metrics"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:weightSum="2"
            app:layout_constraintTop_toBottomOf="@id/layout_investment_score">

            <!-- Left Column -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <!-- NAV -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="NAV"
                        android:textSize="13sp"
                        android:textColor="@color/gray_600" />

                    <TextView
                        android:id="@+id/tv_nav"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$125.50"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:textColor="@color/black" />

                </LinearLayout>

                <!-- AUM -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="AUM"
                        android:textSize="13sp"
                        android:textColor="@color/gray_600" />

                    <TextView
                        android:id="@+id/tv_aum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$2.5B"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:textColor="@color/black" />

                </LinearLayout>

                <!-- Expense Ratio -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Expense"
                        android:textSize="13sp"
                        android:textColor="@color/gray_600" />

                    <TextView
                        android:id="@+id/tv_expense_ratio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.15%"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:textColor="@color/success_green" />

                </LinearLayout>

            </LinearLayout>

            <!-- Vertical Divider -->
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="16dp"
                android:background="@color/gray_200" />

            <!-- Right Column -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <!-- Performance Class -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Performance"
                        android:textSize="13sp"
                        android:textColor="@color/gray_600" />

                    <TextView
                        android:id="@+id/tv_performance_class"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="HIGH"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:background="@drawable/rounded_background_success"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="2dp" />

                </LinearLayout>

                <!-- Risk Level -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Risk"
                        android:textSize="13sp"
                        android:textColor="@color/gray_600" />

                    <TextView
                        android:id="@+id/tv_risk_level"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="LOW"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:background="@drawable/rounded_background_success"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="2dp" />

                </LinearLayout>

                <!-- Recommendation -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Action"
                        android:textSize="13sp"
                        android:textColor="@color/gray_600" />

                    <TextView
                        android:id="@+id/tv_recommendation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="BUY"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:textColor="@color/success_green" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <!-- View Details Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_view_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="View Full Analysis"
            android:textSize="14sp"
            android:textStyle="bold"
            app:cornerRadius="12dp"
            style="@style/Widget.Material3.Button.OutlinedButton"
            app:strokeColor="@color/ai_purple"
            android:textColor="@color/ai_purple"
            app:icon="@drawable/ic_arrow_forward"
            app:iconGravity="end"
            app:layout_constraintTop_toBottomOf="@id/layout_metrics" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>